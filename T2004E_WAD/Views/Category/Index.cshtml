@model IEnumerable<T2004E_WAD.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Index</h2>
@{ Html.BeginForm("Index", "Category", FormMethod.Get);}
@Html.TextBox("search")
<button type="submit">Search</button>
@{ Html.EndForm();}
<p>
    @Html.ActionLink("Sort by Name ASC", "Index", new { sortOrder = "asc" })
    @Html.ActionLink("Sort by Name DESC", "Index", new { sortOrder = "desc" })
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameC)
        </td>
        <td>
            <img src="~@item.Image" width="50" height="50"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
