@model dynamic

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Index</h2>
@{ Html.BeginForm("Index", "Product", FormMethod.Get);}
@Html.TextBox("search")
<select name="categoryId" class="form-control">
    <option value="">Select category</option>
    @foreach(T2004E_WAD.Models.Category item in Model.Categories)
            {
                <option @(ViewBag.CategoryId == item.Id ?"selected":"") value="@item.Id">@item.NameC</option>
            }
</select>
<button type="submit">Search</button>
@{ Html.EndForm();}
<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Sort by NameP ASC", "Index", new { sortOrder = "asc" })
    @Html.ActionLink("Sort by NameP DESC", "Index", new { sortOrder = "desc" })
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            NameB
        </th>
        <th>
           NameC
        </th>
        <th>
           NameP
        </th>
        <th>
            Image
        </th>
        <th>
            Price
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (T2004E_WAD.Models.Product item in Model.Products) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand.NameB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.NameC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
